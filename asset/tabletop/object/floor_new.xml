<mujoco model="floor and sky">

    <visual>
        <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0" />
        <rgba haze="0.15 0.25 0.35 1" />
    </visual>

    <asset>
        <!-- Sky -->
        <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512"
            height="3072" />
        <!-- Ground -->
        <texture type="2d" name="light_wood" file="light_floor.png" />
        <material name="floor_mat" texture="light_wood" specular="0.5" shininess="0.5"
            rgba="0.9 0.9 0.9 1" />
    </asset>

    <worldbody>
        <light pos="1 -1 1.5" dir="-1 1 -1" diffuse="0.5 0.5 0.5" directional="true" />
        <geom name="floor" group="1" size="0 0 0.05" type="plane" material="floor_mat" />
    </worldbody>

</mujoco>